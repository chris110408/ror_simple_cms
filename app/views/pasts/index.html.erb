<p id="notice"><%= notice %></p>

<h1>Listing Pasts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pasts.each do |past| %>
      <tr>
        <td><%= link_to 'Show', past %></td>
        <td><%= link_to 'Edit', edit_past_path(past) %></td>
        <td><%= link_to 'Destroy', past, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

