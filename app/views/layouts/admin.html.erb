<!DOCTYPE html>
<html>
<head>
  <title>Simple CMS | <%= @page_title || "Admin" %></title></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <!--<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>-->
  <%= csrf_meta_tags %>
  <style>
      span.status {display: block; width:10px; height:10px; margin:0.25em auto;
          padding:0;border:1px solid #000000; }
      span.status.true {background: green; color:green;}
      span.status.false {background:red;color:red;}
      
  </style>
</head>
<body>
    <div id="header">
        <h1> simple CMS Admin</h1>
    </div>
    <div id = "main">
        <% if !flash[:notice].blank? %>
            <div class = "notice">
                <%= flash[:notice] %>
            </div>
        <% end %>
           <!--before yield-->
        <div id="content">
            <%= yield %>        
        </div>

    <!--after yield-->
    </div>
 
</body>
</html>
