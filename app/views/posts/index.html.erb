<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<%= link_to("<< Back to List",{:action => 'index'}, :onclick => "jsRoar('javascript'); return true;" ) %>

<%= javascript_tag("jsRoar('rails')") %>

<table>
  <thead>
    <tr>
      <th>context</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.context %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post),:onclick => "jsRoar('javascript'); return true;" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
