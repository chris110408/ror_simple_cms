


<div class="subjects index">
    <h2>Pages</h2>
    <%= link_to("add New Subjects","{:action => 'new'}",:class => 'action new')%>
    <%= @subject.pages %>
    <table class="listing" summary = "Subject list">
        <tr class="header">
            <th>&nbsp;</th>
            <th>Subject</th>
            <th>Name</th>
            <th>Permalink</th>
            <th>visible</th>
            <th>sections</th>
            <th>Actions</th>
        </tr>
        <% @pages.each do |page| %>
        <tr>
            <td><%= page.position %></td>
            <td><%= page.subject.name if page.subject %></td>
            <td><%= page.name %></td>
            <td><%= page.permalink %></td>
            <td class = "center"><%= status_tag(page.visible) %></td>
            <td class = "center"><%= page.sections.size%></td>
            <td calss = 'actions'>
                <%= link_to("show",{:action => 'show', :id => page.id}, :class => 'action show') %>
                <%= link_to("Edit",{:action => 'edit', :id => page.id}, :class => 'action edit') %>
                <%= link_to("Delete",{:action => 'delete', :id => page.id}, :class => 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>
</div>
    